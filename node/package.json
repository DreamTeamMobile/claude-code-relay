{
  "name": "claude-code-relay",
  "version": "0.0.5",
  "description": "Local proxy that exposes Claude CLI as an OpenAI-compatible API server",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "claude-code-relay": "./dist/esm/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "esbuild src/*.ts --bundle --platform=node --format=esm --outdir=dist/esm --packages=external",
    "build:cjs": "esbuild src/*.ts --bundle --platform=node --format=cjs --outdir=dist/cjs --packages=external",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/esm",
    "dev": "tsc --watch",
    "start": "node dist/esm/cli.js serve",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "claude",
    "openai",
    "proxy",
    "llm",
    "api",
    "cli"
  ],
  "author": "Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DreamTeamMobile/claude-code-relay.git"
  },
  "bugs": {
    "url": "https://github.com/DreamTeamMobile/claude-code-relay/issues"
  },
  "homepage": "https://github.com/DreamTeamMobile/claude-code-relay#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
